<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="cn.edu.sustech.cs209.chatting.client.chatWindowController">
    <!-- 聊天记录的TextArea -->
    <TextArea fx:id="chatTextArea" prefHeight="200.0" prefWidth="300.0" VBox.vgrow="ALWAYS" />
    <!-- 发送消息的TextField -->
    <TextField fx:id="messageTextField" prefWidth="300.0" />
    <!-- 发送按钮 -->
    <Button text="Send" onAction="#doSendMessage" />
</VBox>
